.row.justify-content-center.mt-3
  .col-md-6.col-12
    =form_for @order do |f|
      .mb-3
        =f.label :name, class: 'form-label'
        =f.text_field :name, class: 'form-control', required: true
      .mb-3
        =f.label :phone, class: 'form-label'
        =f.telephone_field :phone, class: 'form-control'
      .form-check.mb-3
        =f.label :text_messages_enabled, class: 'form-check-label'
        =f.check_box :text_messages_enabled, class: 'form-check-input'
      .mb-3
        =f.label :item, class: 'form-label'
        =f.collection_select :item, Order.items.keys, :to_s, :titleize, {},  class: 'form-select'
      -if @order.persisted?
        .mb-3
          =f.label :status, class: 'form-label'
          =f.collection_select :status, Order.statuses.keys, :to_s, :titleize, {},  class: 'form-select'
      .mt-4
        =f.submit class: 'btn btn-primary'